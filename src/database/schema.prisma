datasource db {
  provider = "mysql"
  url      = env("DATABASE_PRISMA_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

model company {
  id         Int      @id @default(autoincrement())
  faebook    String
  instagram  String
  phone      String
  cellphone  String
  email      String   @unique
  postalcode String
  address    String
  mission    String
  vision     String
  values     String
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())
}

model customer {
  id        Int      @id @default(autoincrement())
  fullname  String
  cellphone String
  phone     String
  email     String   @unique
  cep       String
  address   String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
