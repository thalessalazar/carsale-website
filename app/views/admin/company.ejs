<%- include('include/imports/adminhead') %>
<%- include('include/components/navbar') %> 
<%- include('include/components/breadcumb') %> 

<section class="car-admin spad">
    <div class="container">
        <div class="row justify-content-center">
            <%- include('include/components/navbar-side') %>
            <div class="col-lg-7">
                <form action="/admin/empresa" method="POST" class="">
                    <div class="row content-card">
                        <input type="hidden" name="id" value="<%= company.id %> ">
                        <div class="form-group col-lg-12">
                            <label for="">Facebook</label>
                            <input type="text" class="" placeholder="link do perfil" name="facebook_user" value="<%= company.facebook_user%> ">
                        </div>
                        <div class="col-lg-12">
                            <label for="">Instagram</label>
                            <input type="text" class="" placeholder="link do perfil" name="instagram_user" value="<%= company.instagram_user %> ">
                        </div>
                        <div class="col-lg-6">
                            <label for="">Telefone(s)</label>
                            <input type="text" class="" placeholder="5332474747 / 53999999999" name="phone" value="<%= company.phone %> ">
                        </div>
                        <div class="col-lg-6">
                            <label for="">WhatsApp</label>
                            <input type="text" class="" placeholder="+5553999999999" name="cellphone" value="<%= company.cellphone %> ">
                        </div>
                        <div class="col-lg-12">
                            <label for="">E-mail</label>
                            <input type="email" class="" placeholder="suasempresa@gmail.com" name="email" value="<%= company.email %> ">
                        </div>

                        <div class="col-lg-12">
                            <label for="">Segunda à Sexta</label>
                            <input type="text" class="" placeholder="09:00 às 12:00 - 14:00 às 19:30" name="hours_week" value="<%= company.hours_week %> ">
                        </div>

                        <div class="col-lg-12">
                            <label for="">Sábado</label>
                            <input type="text" class="" placeholder="09:00 às 12:00 - 14:00 às 19:30" name="hours_saturday" value="<%= company.hours_saturday %> ">
                        </div>

                        <div class="col-lg-12">
                            <label for="">Domingo</label>
                            <input type="text" class="" placeholder="Fechado" name="hours_sunday" value="<%= company.hours_sunday %> ">
                        </div>

                        <div class="col-lg-12">
                            <label for="">Missão</label>
                            <textarea name="mission" id="" cols="30" rows="10"><%= company.mission %> </textarea>
                        </div>
                        <div class="col-lg-12">
                            <label for="">Visão</label>
                            <textarea name="vision" id="" cols="30" rows="10"><%= company.vision %> </textarea>
                        </div>
                        <div class="col-lg-12">
                            <label for="">Valores</label>
                            <textarea name="values" id="" cols="30" rows="10"><%= company.values %> </textarea>
                        </div>
                        <div class="col-3 ml-auto d-flex justify-content-end">
                            <button class="primary-btn" role="submit" type="submit"><i class="fa fa-save"></i> Salvar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<%- include('include/imports/adminend') %>